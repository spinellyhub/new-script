-- SPINELLY HUB LUA (XENO COMPATIBLE)
-- Menú visual completo inspirado en tu script Python

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- Limpiar GUI anterior
if PlayerGui:FindFirstChild("SpinellyHub") then
	PlayerGui:FindFirstChild("SpinellyHub"):Destroy()
end

-- Crear ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SpinellyHub"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

-- Fondo principal
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 400, 0, 500)
frame.Position = UDim2.new(0.5, -200, 0.5, -250)
frame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Fondo Matrix opcional
local matrixFrame = Instance.new("Frame")
matrixFrame.Size = UDim2.new(1,0,1,0)
matrixFrame.BackgroundTransparency = 1
matrixFrame.Parent = frame

local matrixText = Instance.new("TextLabel")
matrixText.Size = UDim2.new(1,0,1,0)
matrixText.Position = UDim2.new(0,0,0,0)
matrixText.BackgroundTransparency = 1
matrixText.Font = Enum.Font.Code
matrixText.TextSize = 14
matrixText.TextColor3 = Color3.fromRGB(0, 255, 70)
matrixText.Text = ""
matrixText.TextXAlignment = Enum.TextXAlignment.Left
matrixText.TextYAlignment = Enum.TextYAlignment.Top
matrixText.Parent = matrixFrame

-- Animación tipo Matrix
spawn(function()
	local chars = "01"
	while true do
		local line = ""
		for i=1,150 do
			line = line .. string.sub(chars, math.random(1,#chars), math.random(1,#chars))
		end
		matrixText.Text = line
		wait(0.02)
	end
end)

-- Título animado
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.Position = UDim2.new(0,0,0,10)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(125, 249, 255)
title.Font = Enum.Font.Code
title.TextSize = 32
title.Text = ""
title.Parent = frame

local fullTitle = "SPINELLY HUB"
local index = 0
spawn(function()
	while index <= #fullTitle do
		title.Text = string.sub(fullTitle,1,index)
		index = index + 1
		wait(0.07)
	end
end)

-- Función para crear botones
local function crearBoton(nombre, y, func)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 200, 0, 40)
	btn.Position = UDim2.new(0.5, -100, 0, y)
	btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
	btn.TextColor3 = Color3.fromRGB(125,249,255)
	btn.Font = Enum.Font.Code
	btn.TextSize = 22
	btn.Text = nombre
	btn.Parent = frame
	btn.MouseButton1Click:Connect(func)
end

-- Barra de carga simulada
local barra = Instance.new("Frame")
barra.Size = UDim2.new(0,0,0,10)
barra.Position = UDim2.new(0,0,0,450)
barra.BackgroundColor3 = Color3.fromRGB(125,249,255)
barra.Parent = frame

spawn(function()
	for i=1,400 do
		barra.Size = UDim2.new(0,i,0,10)
		wait(0.01)
	end
end)

-- Botones principales
crearBoton("Main", 80, function()
	title.Text = "Main"
end)
crearBoton("PvP", 130, function()
	title.Text = "PvP"
end)
crearBoton("Laser Lagger", 180, function()
	title.Text = "Laser Lagger"
end)
crearBoton("ZZZ", 230, function()
	title.Text = "ZZZ"
end)
crearBoton("Discord", 280, function()
	setclipboard("https://discord.gg/") -- copia al portapapeles
	title.Text = "Discord copiado al portapapeles!"
end)

-- Botón cerrar
crearBoton("Cerrar Hub", 330, function()
	screenGui:Destroy()
end)
